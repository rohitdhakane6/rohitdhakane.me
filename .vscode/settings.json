{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",

  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  // Disable Prettier in this project (important)
  "prettier.enable": false,

  // Optional but useful
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  }
}
